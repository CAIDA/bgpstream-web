{% extends 'CAIDABGPStreamWebHomepageBundle:Default:base.html.twig' %}

{% block styleblock %}
    {{ parent() }}
    {% stylesheets
    '@CAIDABGPStreamWebHomepageBundle/Resources/public/css/docs.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3">
            {% spaceless %}
                {{ knp_menu_render(
                'docsNav',
                {'template': 'CAIDABGPStreamWebHomepageBundle:Menu:docsnav.html.twig',
                    'app': app}
                ) }}
            {% endspaceless %}
        </div>
        <div class="col-md-9">
            {% block slimbody %}{% endblock %}
        </div>
    </div>
{% endblock %}
